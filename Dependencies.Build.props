<Project>
  <PropertyGroup>
    <!-- ForEvolve packages -->
    <ForEvolvePackagesVersion Condition="'$(FOREVOLVE_PACKAGES_VERSION)'==''">[2.0.0,3.0)</ForEvolvePackagesVersion>
    <ForEvolvePhantomJsDependenciesPackagesVersion Condition="'$(FOREVOLVE_PHANTOMJS_DEPENDENCIES_PACKAGES_VERSION)'==''">1.0.0</ForEvolvePhantomJsDependenciesPackagesVersion>
    <ForEvolveTestingVersion Condition="'$(FOREVOLVE_TESTING_VERSION)'==''">[1.0.0-CI-677,2.0)</ForEvolveTestingVersion>

    <!-- Versioning helpers -->
    <!-- <ForEvolveTargetFrameworks Condition="'$(FOREVOLVE_TARGET_FRAMEWORKS)'==''">netstandard2.0;netcoreapp2.1;netcoreapp2.2;netcoreapp3.0</ForEvolveTargetFrameworks> -->
    <ForEvolveTargetFrameworks Condition="'$(FOREVOLVE_TARGET_FRAMEWORKS)'==''">netcoreapp3.1</ForEvolveTargetFrameworks>
    <ForEvolveTestTargetFramework Condition="'$(FOREVOLVE_TARGET_FRAMEWORKS)'==''">netcoreapp3.1</ForEvolveTestTargetFramework>
  
    <NewtonsoftJsonVersion Condition="'$(NEWTONSOFT_JSON_VERSION)'==''">12.0.*</NewtonsoftJsonVersion>
  </PropertyGroup>

  <!-- Source packages -->
  <Choose>
    <When Condition=" '$(TargetFramework)'=='netcoreapp3.0' or '$(TargetFramework)'=='netcoreapp3.1' or '$(TargetFramework)'=='netstandard2.1' ">
      <PropertyGroup>
        <ForEvolveNetCoreVersion Condition="'$(FOREVOLVE_ASPNETCORE_VERSION)'==''">[3.0.0,4.0)</ForEvolveNetCoreVersion>
        <ForEvolveIdentityVersion Condition="'$(FOREVOLVE_IDENTITY_VERSION)'==''">[3.0.0,4.0)</ForEvolveIdentityVersion>
        <DefineConstants>SYSTEM_TEXT_JSON</DefineConstants>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <ForEvolveNetCoreVersion Condition="'$(FOREVOLVE_ASPNETCORE_VERSION)'==''">[2.2.0,3.0)</ForEvolveNetCoreVersion>
        <ForEvolveIdentityVersion Condition="'$(FOREVOLVE_IDENTITY_VERSION)'==''">[2.2.0,3.0)</ForEvolveIdentityVersion>
      </PropertyGroup>
    </Otherwise>
  </Choose>

  <!-- Tests packages -->
  <PropertyGroup>
    <ForEvolveXunitVersion Condition="'$(FOREVOLVE_XUNIT_VERSION)'==''">2.4.1</ForEvolveXunitVersion>
    <ForEvolveMoqVersion Condition="'$(FOREVOLVE_MOQ_VERSION)'==''">4.10.1</ForEvolveMoqVersion>
    <ForEvolveTestSdkVersion Condition="'$(FOREVOLVE_TEST_SDK_VERSION)'==''">16.0.1</ForEvolveTestSdkVersion>
  </PropertyGroup>
  <Choose>
    <When Condition=" '$(TargetFramework)'=='netcoreapp3.0' ">
      <PropertyGroup>
        <ForEvolveAspNetCoreTestHostVersion Condition="'$(FOREVOLVE_ASPNETCORE_TESTHOST_VERSION)'==''">3.0.0</ForEvolveAspNetCoreTestHostVersion>
      </PropertyGroup>
    </When>
    <Otherwise>
      <PropertyGroup>
        <ForEvolveAspNetCoreTestHostVersion Condition="'$(FOREVOLVE_ASPNETCORE_TESTHOST_VERSION)'==''">2.2.0</ForEvolveAspNetCoreTestHostVersion>
      </PropertyGroup>
    </Otherwise>
  </Choose>

</Project>